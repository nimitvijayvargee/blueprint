<% project = entry.project %>

<div data-entry-view-tracker-target="entry" data-entry-id="<%= entry.id %>">
<%= render "shared/card", class: "relative" do %>
 <div class="flex space-x-4">
    <p class="grow"><%= render "shared/user_inline", user: project.user %> published an update to <a href="<%= project_path(project) %>" class="underline" data-turbo-frame="_top" data-turbo-prefetch="false"><%= project.title %></a> <%= c_time_ago_in_words(entry.created_at) %> ago</p>
  </div>
  <div class="overflow-hidden markdown timeline-journal max-h-[28rem]">
    <h1><%= entry.summary %></h1>
    <%= sanitize_marksmith_html(entry.rendered_html) %>
  </div>
  <div class="absolute left-0 right-0 h-30 bottom-10 bg-gradient-to-t from-bp-darker to-transparent">
    <%= link_to "See all â†’", project_journal_entry_path(project, entry, return_to: request.fullpath), class: "absolute -bottom-4 left-8 underline", data: { turbo_frame: "_top", turbo_prefetch: false, entry_link: true } %>
  </div>
<% end %>
</div>
