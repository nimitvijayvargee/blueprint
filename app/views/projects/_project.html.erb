<%= link_to project_path(project) do %>
    <%= render "shared/card", class: "space-y-6 hover:scale-105 hover:shadow-xl motion-safe:transition-all" do %>
        <div class="h-48 -mx-8 -mt-6 bg-gray-200 bg-center bg-cover" style="background-image: url('<%= project.display_banner ? url_for(project.display_banner) : nil %>')">
        </div>
        <div>
            <div>
                <p class="text-2xl"><%= project.title %></p>
            </div>
            <div>
            <p class="overflow-hidden overflow-ellipsis"><%= project.description.empty? ? "No description yet" : project.description %></p>
            </div>
        </div>
    <% end %>
<% end %>
