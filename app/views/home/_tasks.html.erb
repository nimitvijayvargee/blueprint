<% tasks = current_user.tasks.task_requirements %>

<%= render "shared/card", class: "flex flex-col" do %>
  <div class="absolute flex items-center justify-center bg-center bg-no-repeat bg-contain size-32 -right-1 -top-8 -rotate-5"
  style="background-image: url('<%= asset_path('stickers.png') %>')">
  </div>
  <div class="">
    <h2 class="text-3xl">Your tasks</h2>
    <p>Get stickers when you finish!</p>
  </div>
  <div class="flex flex-col space-y-4 grow">
    <div class="space-y-4 grow">
      <% tasks.each do |name, task| %>
        <% done = task[:met] %>
        <div class="flex items-center space-x-4 text-xl border-0">
          <div class="border-2 size-4 <%= done ? 'bg-white' : '' %>"></div>
          <% if name == :join_slack %>
            <% if done %>
              <p class="line-through"><%= task[:msg] %></p>
            <% else %>
              <button type="button"
              data-controller="modal"
              data-modal-target-id-value="slack-join"
              data-action="click->modal#show"
              class="underline underline-offset-2"><%= task[:msg] %></button>
            <% end %>
          <% elsif name == :link_github %>
            <% if done %>
              <p class="line-through"><%= task[:msg] %></p><a class="block underline" href="<%= github_login_path %>">(configure)</a>
            <% else %>
              <button type="button"
              data-controller="modal"
              data-modal-target-id-value="github-link"
              data-action="click->modal#show"
              class="underline underline-offset-2"><%= task[:msg] %></button>
            <% end %>
          <% elsif name == :create_project %>
            <% if done %>
              <p class="line-through"><%= task[:msg] %></p>
            <% else %>
              <%= link_to task[:msg], new_project_path, class: "underline underline-offset-2" %>
            <% end %>
          <% elsif name == :post_journal %>
            <% if done %>
              <p class="line-through"><%= task[:msg] %></p>
            <% else %>
              <%= link_to task[:msg], projects_path, class: "underline underline-offset-2" %>
            <% end %>
          <% else %>
            <% if done %>
              <p class="line-through"><%= task[:msg] %></p>
            <% else %>
              <p><%= task[:msg] %></p>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="mb-1 space-y-1">
      <p class=""><%= current_user.tasks.completed? ? "Click the link below to claim your stickers!" : "Click on a task to begin!" %></p>
      <% if current_user.tasks.completed? %>
        <%= render "shared/button", text: "Claim Stickers", class: "w-full", url: "https://forms.hackclub.com/t/6MhoMy5dY7us?ID=#{current_user.slack_id}&BPID=#{current_user.id}&email=#{current_user.email}", html_options: { target: "_blank" } %>
      <% else %>
        <%= render "shared/button", text: "Claim Stickers", class: "w-full", html_options: { disabled: true } %>
      <% end %>
    </div>
  </div>
<% end %>

<div 
  data-controller="modal"
  data-action="modal:show-slack-join@window->modal#show modal:hide-slack-join@window->modal#hide modal:toggle-slack-join@window->modal#toggle modal:next-slack-join@window->modal#next"
  data-modal-starting-step-value="<%= (current_user.slack_user? && current_user.is_mcg?) ? 1 : 0 %>"
  class="fixed inset-0 z-50 hidden">
  <div class="fixed inset-0 flex items-center justify-center p-4" data-controller="tasks-slack" data-tasks-slack-target-id-value="slack-join">
    <%= render "shared/card", html_options: { data: { modal_target: "panel" } }, class: "z-50 min-w-xl space-y-0" do %>
      <div data-modal-target="step" class="space-y-6">
        <div>
          <p class="text-3xl">Join the Hack Club Slack</p>
          <p>Slack is where Hack Club communicates!</p>
        </div>
        <div class="max-w-xl bg-gray-500">
          <%= video_tag "https://hc-cdn.hel1.your-objectstorage.com/s/v3/db8b7c6bb2a50670b538179d0259bbe1534eff83_slack-intro.mp4", autoplay: true, loop: true, muted: true, playsinline: true, preload: 'metadata', class: 'object-fit', type: 'video/mp4' %>
        </div>
        <%= render "shared/button", 
            text: "Join the Slack!",
            class: "w-full", html_options: { data: { action: "click->tasks-slack#sendInvite", tasks_slack_target: "button1" } } 
            %>
      </div>
      <div data-modal-target="step" class="space-y-6">
        <div>
          <p class="text-3xl">Check your inbox!</p>
          <p>Slack has sent you an invite. (Check your spam folder)</p>
        </div>
        <div class="max-w-xl bg-gray-500">
          <%= video_tag "https://hc-cdn.hel1.your-objectstorage.com/s/v3/efdff6de4069213f6f35339981764014162c1735_slack-onboarding.mp4", autoplay: true, loop: true, muted: true, playsinline: true, preload: 'metadata', class: 'object-fit', type: 'video/mp4' %>
        </div>
        <div class="max-w-xl bg-gray-500">
          <%= render "shared/button", 
            text: "I'm in!",
            class: "w-full", html_options: { data: { action: "click->modal#next" } } 
            %>
        </div>
      </div>
      <div data-modal-target="step" class="space-y-6">
        <div>
          <p class="text-3xl">Verify your Slack account</p>
          <p>Head over to #slack-welcome-start and "Explore the Cave"</p>
        </div>
        <div class="max-w-xl bg-gray-500">
          <%= video_tag "https://hc-cdn.hel1.your-objectstorage.com/s/v3/05d227878ce6983c09be177e8d4f05ee94ce05dc_slack-toriel.mp4", autoplay: true, loop: true, muted: true, playsinline: true, preload: 'metadata', class: 'object-fit', type: 'video/mp4' %>
        </div>
        <%= render "shared/button", 
            text: "I'm done!",
            class: "w-full", html_options: { data: { action: "click->tasks-slack#checkVerified", tasks_slack_target: "button2" } } 
            %>
      </div>
    <% end %>
    <div data-modal-target="overlay" class="fixed inset-0 z-40 bg-black/50"></div>
  </div>
</div>

<div 
  data-controller="modal"
  data-action="modal:show-github-link@window->modal#show modal:hide-github-link@window->modal#hide modal:toggle-github-link@window->modal#toggle modal:next-github-link@window->modal#next"
  data-modal-starting-step-value="0"
  class="fixed inset-0 z-50 hidden">
  <div class="fixed inset-0 flex items-center justify-center p-4" data-controller="tasks-github" data-tasks-github-target-id-value="github-link">
    <%= render "shared/card", html_options: { data: { modal_target: "panel" } }, class: "z-50 min-w-xl space-y-0" do %>
      <div data-modal-target="step" class="space-y-6">
        <div>
          <p class="text-3xl">Link your GitHub account</p>
          <p>GitHub is where you can store your project files!<br>We'll automatically sync your journals to GitHub</p>
        </div>
        <div class="max-w-xl bg-gray-500">
          <%= video_tag "https://hc-cdn.hel1.your-objectstorage.com/s/v3/aebc2a690812ca959742fcd99214b4ff527f0b3f_github-intro.mp4", autoplay: true, loop: true, muted: true, playsinline: true, preload: 'metadata', class: 'object-fit', type: 'video/mp4' %>
        </div>
        <%= render "shared/button", 
            text: "Link GitHub Account!",
            class: "w-full",
            url: github_login_path,
            html_options: { data: { turbo: false } }
            %>
      </div>
    <% end %>
    <div data-modal-target="overlay" class="fixed inset-0 z-40 bg-black/50"></div>
  </div>
</div>
