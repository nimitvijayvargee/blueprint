  </div>
</div>
      <!-- Divider Image -->
      <div class="w-full py-16">
        <%= image_tag "divider2.webp", class: "w-full h-auto" %>
      </div>

      <div class="space-y-12">
        <p class="text-xl text-center md:text-3xl">Here's what others are working on</p>
        <div class="overflow-hidden">
          <div class="flex h-64 space-x-8 space-y-8 carousel md:h-84">
            <% @featured_projects.shuffle.each do |project| %>
              <a href="<%= project[:url] %>" target="_blank" rel="noopener noreferrer" class="flex flex-col w-40 h-full md:w-72 shrink-0 bg-bp-darker" data-carousel-target="item">
                <div class="h-20 bg-gray-200 bg-center bg-no-repeat bg-cover md:h-40" style="background-image: url('<%= image_path(project[:image]) %>')"></div>
                <div class="flex flex-col p-2 space-y-2 md:p-4 grow">
                  <p class="text-base font-bold md:text-xl"><%= project[:title] %> <span class="text-xs">by <%= project[:author] %></span></p>
                  <p class="text-xs md:text-base"><%= project[:description] %></p>
                </div>
              </a>
            <% end %>
          </div>
        </div>
        <div class="mx-auto" style="max-width: 350px;">
        <%= render "shared/button", text: "Explore More Projects →", url: "/explore?sort=top&type=projects", class: "w-full" %>
      </div>

      </div>
      
    
      <!-- Divider Image -->
      <div class="w-full py-16">
        <%= image_tag "divider2.webp", class: "w-full h-auto" %>
      </div>
    
